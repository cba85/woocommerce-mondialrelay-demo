{
  "name": "cba85/woocommerce-mondialrelay-demo",
  "type": "project",
  "license": "GPL-3.0-or-later",
  "description": "WooCommerce Mondial Relay demo website.",
  "homepage": "https://demo.mondialrelay-woocommerce.com",
  "authors": [
    {
      "name": "Appstraction",
      "email": "contact@mondialrelay-woocommerce.com",
      "homepage": "https://github.com/cba85"
    }
  ],
  "keywords": [
    "wordpress", "woocommerce", "mondial relay"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.9.7",
    "oscarotero/env": "^1.1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "wpackagist-plugin/woocommerce": "^3.4",
    "wpackagist-theme/storefront": "^2.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
